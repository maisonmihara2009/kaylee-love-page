      height: 100vh;
    }
    h1 {
      margin-top: 100px;
      font-size: 3em;
      text-shadow: 2px 2px 5px #ff4b5c;
    }
    .hearts {
      font-size: 2.5em;
      margin: 20px 0;
      animation: pulse 1.5s infinite;
    }
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.2); }
      100% { transform: scale(1); }
    }
    .buttons {
      margin-top: 40px;
      position: relative;
    }
    button {
      background: #ff4b5c;
      border: none;
      color: white;
      font-size: 1.2em;
      padding: 15px 30px;
      border-radius: 30px;
      cursor: pointer;
      transition: 0.3s;
      position: absolute;
    }
    button:hover {
      transform: scale(1.1);
    }
    #yesBtn {
      background: #ff4081;
      left: 40%;
      top: 0;
    }
    #noBtn {
      background: #999;
      left: 55%;
      top: 0;
    }
    .confetti {
      position: fixed;
      top: -10px;
      font-size: 2em;
      animation: fall linear forwards;
      pointer-events: none;
    }
    @keyframes fall {
      to {
        transform: translateY(110vh) rotate(360deg);
        opacity: 0;
      }
    }
    #loveMessage {
      display: none;
      font-size: 4em;
      color: #fff;
      text-shadow: 0 0 20px #ff4b5c, 0 0 40px #ff80ab, 0 0 60px #ff4081;
      margin-top: 50px;
      animation: glow 2s infinite alternate;
    }
    @keyframes glow {
      from { text-shadow: 0 0 10px #ff4b5c, 0 0 20px #ff80ab; }
      to { text-shadow: 0 0 30px #ff4081, 0 0 60px #ff80ab; }
    }
    #videoContainer {
      display: none;
      position: fixed;
      top: 50%;
